{
  "apps" : [
    {
      "name"      : "approles-web",
      "script"    : "app.js",
      "instances" : 0,
      "instance_var": "WEB_APPROLES",
      "exec_mode" : "cluster",
      "watch"     : false,
      "ignore_watch": [
        "logs",
        ".nuxt"
      ],
      "error_file": "logs/web.approles.stderr.log",
      "out_file"  : "logs/web.approles.stdout.log",
      "env": {
        "NODE_ENV": "dev"
      },
      "env_production" : {
        "NODE_ENV": "production"
      },
      "env_pre" : {
        "NODE_ENV": "production",
        "SERVER_ENV": "pre"
      }
    }
  ]
}